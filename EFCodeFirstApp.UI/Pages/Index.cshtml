@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Author</th>
            <th scope="col">Code</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
        <tr>
            <td>@book.Id</td>
            <td>@book.Name</td>
            <td>@book.Author</td>
            <td>@book.Code</td>
            <td>
                <a asp-route-id="@book.Id" asp-page="/Details">Details</a>
                <a asp-route-id="@book.Id" asp-page="/Edit">Edit</a>

            </td>
        </tr>
        }
        </tbody>
    </table>
